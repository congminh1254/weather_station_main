{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "weather-app/build",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR/..\" run build"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "api/stations/create",
        "function": "stationApiCreate"
      },
      {
        "source": "api/stations/update",
        "function": "stationApiUpdate"
      },
      {
        "source": "api/stations/delete",
        "function": "stationApiDelete"
      },
      {
        "source": "api/stations",
        "function": "stationApiList"
      },
      {
        "source": "api/stations/:id",
        "function": "stationApiGet"
      }
    ]
  }
}
